<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:filtros="widgets.Interrupciones.busqueda.filtros.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("widgets.Interrupciones.busqueda.FormularioBusquedaInterrupcion")]
	</fx:Metadata>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	<s:Scroller height="580">
		<s:Group width="100%" height="100%" clipAndEnableScrolling="true">
			<s:Form>
				<filtros:FiltroPeriodo id="filtroPeriodo"></filtros:FiltroPeriodo>
				
				<s:HGroup>
					<s:Label text="Tipo Resultado:" width="150" textAlign="right" />
					<s:DropDownList prompt="Seleccione" id="listaTipoResultado"  width="200" />
				</s:HGroup>
				
				<s:HGroup horizontalAlign="center" width="100%">
					<s:Button label="Buscar" id="buscarClienteSedBtn" />
					<s:Button label="Volver" id="volverMenuPrincipalBtn" />
				</s:HGroup>
				
			</s:Form>
		</s:Group>	
	</s:Scroller>
</s:Skin>
