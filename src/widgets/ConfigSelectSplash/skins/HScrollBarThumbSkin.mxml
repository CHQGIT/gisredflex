            left="2" right="2" top="4" bottom="0"
            minHeight="14"
            minWidth="14">
        <s:fill>
            <s:BitmapFill fillMode="repeat"
                          rotation="90"
                          source="@Embed('assets/images/thumb.png')"/>
        </s:fill>
    </s:Rect>
